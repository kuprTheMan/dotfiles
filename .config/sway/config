### General
#
# Variables:
#
set $mod Mod4
set $left h
set $down j
set $up k
set $right l

set $resize_factor 50px

set $gaps_size 0
 
set $border_size 4
 
set $term footclient
set $menu fuzzel

#
# Exexcs
#
exec foot --server
exec mako

exec_always --no-startup-id dbus-update-activation-environment --all

exec wl-paste --type text --watch cliphist store
exec wl-paste --type image --watch cliphist store

exec autotiling --limit 2 -w 1 4 5 6

# Idle configuration:
exec swayidle -w \
timeout 300 'swaylock -f' \
timeout 600 'swaymsg "output * dpms off"' \
resume 'swaymsg "output * dpms on"' \
before-sleep 'swaylock -f'

### Key bindings
input type:keyboard {
  xkb_layout us,ru
  xkb_options grp:win_space_toggle
}

bindsym --to-code {
  # Terminal
  $mod+Return exec $term

  # Emacs
  # $mod+shift+e exec emacsclient -c

  # Close Window
  $mod+w kill

  # Application launcher
  $mod+d exec $menu

  # Screenshot
  $mod+p exec grim -g "$(slurp)" - | wl-copy

  # Clipboard
  $mod+c exec cliphist list | fuzzel --dmenu | cliphist decode | wl-copy

  # Reload the configuration file
  $mod+Shift+c reload

  # Don't disturb
  $mod+n exec ~/.config/sway/bin/dnd

  # Quick recording
  $mod+Shift+q exec ~/.config/sway/bin/recording

  # Multimedia:
  $mod+equal exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.05+
  $mod+minus exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.05-
  $mod+m exec wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
  $mod+Shift+m exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

  ## Window controls:
  # Change focus
  $mod+$left focus left
  $mod+$down focus down
  $mod+$up focus up
  $mod+$right focus right

  # Move
  $mod+Shift+$left move left
  $mod+Shift+$down move down
  $mod+Shift+$up move up
  $mod+Shift+$right move right

  ## Workspaces:
  # Switch to workspace
  $mod+1 workspace number 1
  $mod+2 workspace number 2
  $mod+3 workspace number 3
  $mod+4 workspace number 4
  $mod+5 workspace number 5
  $mod+6 workspace number 6
  $mod+7 workspace number 7
  $mod+8 workspace number 8
  $mod+9 workspace number 9
  $mod+0 workspace number 10
 
  # Move focused container to workspace
  $mod+Shift+1 move container to workspace number 1
  $mod+Shift+2 move container to workspace number 2
  $mod+Shift+3 move container to workspace number 3
  $mod+Shift+4 move container to workspace number 4
  $mod+Shift+5 move container to workspace number 5
  $mod+Shift+6 move container to workspace number 6
  $mod+Shift+7 move container to workspace number 7
  $mod+Shift+8 move container to workspace number 8
  $mod+Shift+9 move container to workspace number 9
  $mod+Shift+0 move container to workspace number 10

  ## Layout:
  #Fullscreen
  $mod+f fullscreen

  # Float
  $mod+Shift+space floating toggle

  # Tabble
  $mod+t layout tabbed

  ## Mode
  $mod+r mode "resize"

}

## Resize
mode "resize" bindsym --to-code {
  $mod+$left resize shrink width 15px
  $mod+$down resize grow height 15px
  $mod+$up resize shrink height 15px
  $mod+$right resize grow width 15px
  Escape mode "default"
}


# Workspace definitions
workspace 1 output DP-1
workspace 2 output HDMI-A-1
workspace 3 output HDMI-A-1
workspace 4 output DP-1
workspace 5 output DP-1
workspace 6 output DP-1

floating_modifier $mod normal

### Rules

# Alias
set $def_float floating enable, move position center, resize set 1800 1000

# General Stuff
for_window [floating] border pixel 1
for_window [class="obsidian"] $def_float
for_window [app_id="imv"] $def_float
for_window [app_id="thunar"] $def_float
for_window [title="(?:Open|Save) (?:File|Folder|As)"] floating enable, move position center, resize set 1200 700

# Firefox
for_window [app_id="firefox"] [title="YouTube — Mozilla Firefox"] inhibit_idle
for_window [title = "About Mozilla Firefox"] floating enable
for_window [window_role = "About"] floating enable
for_window [app_id="firefox" title="Library"] floating enable, sticky enable
for_window [title="^Picture-in-Picture$"] floating enable, move position center, sticky enable, border none

# Steam
for_window [class="^steam$" title="^Friends$"] floating enable
for_window  [class="^steam$" title="Steam - News"] floating enable
for_window [class="^steam$" title=".* - Chat"] floating enable
for_window  [class="^steam$" title="^Settings$"] floating enable
for_window [class="^steam$" title=".* - event started"] floating enable
for_window [class="^steam$" title="^Steam - Self Updater$"] floating enable
for_window [class="^steam$" title="^Screenshot Uploader$"] floating enable

# Discord
for_window [app_id="discord"] inhibit_idle fullscreen

### Theming
#
# Colors:
#
set $accent #E8E3E3
set $red #B66467
set $darkgray #0d0d0d

# Window Border color:         border:         backgr:          text:           indicator:      childborder:
client.focused                 $accent         $accent          $darkgray       $accent         $accent
client.focused_inactive        $darkgray       $darkgray        $accent         $darkgray       $darkgray
client.unfocused               $darkgray       $darkgray        $accent         $darkgray       $darkgray
client.urgent                  $red            $red             $accent         $red            $red

#
# Borders:
#
smart_borders on
default_border pixel $border_size
default_floating_border pixel $border_size

#
# Walls:
#
output * {
   bg ~/.config/sway/walls/mac2.jpg fill
}

#
# Cursor:
#
set $cursor_theme "macOS"
set $cursor_size "32"

seat seat0 xcursor_theme $cursor_theme $cursor_size

#
# Gaps:
#
gaps inner $gaps_size

### Other
#
# Xwayland:
#
xwayland enable

#
# Monitors:
#
output DP-1 pos 0 0 mode 2560x1440@165Hz
output HDMI-A-1 pos 2560 0 mode 1920x1080@144Hz

focus output DP-1

#
# Status Bar:
#
bar {
  swaybar_command waybar
}

############################
include /etc/sway/config.d/*
